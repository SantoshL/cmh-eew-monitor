<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CMH Earthquake Early Warning System</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #333;
            min-height: 100vh;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }

        header {
            text-align: center;
            color: white;
            padding: 20px 0;
            margin-bottom: 30px;
        }

        h1 {
            font-size: 2.5em;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        .subtitle {
            font-size: 1.2em;
            opacity: 0.9;
        }

        .dashboard {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .card-title {
            font-size: 0.9em;
            color: #666;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 10px;
        }

        .card-value {
            font-size: 2.5em;
            font-weight: bold;
            color: #667eea;
        }

        .status-ok {
            color: #10b981;
        }

        .status-alert {
            color: #ef4444;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {

            0%,
            100% {
                opacity: 1;
            }

            50% {
                opacity: 0.5;
            }
        }

        #map {
            height: 600px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            margin-bottom: 20px;
            position: relative;
        }

        .scroll-indicator {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 1000;
            text-align: center;
            animation: bounce 2s infinite;
            cursor: pointer;
            background: rgba(255, 255, 255, 0.9);
            padding: 8px 20px;
            border-radius: 25px;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
            font-size: 0.85em;
        }

        .scroll-indicator-text {
            color: #667eea;
            font-weight: 600;
            font-size: 0.9em;
            margin-bottom: 2px;
        }

        .scroll-arrow {
            font-size: 1.2em;
            color: #667eea;
        }

        @keyframes bounce {

            0%,
            20%,
            50%,
            80%,
            100% {
                transform: translateX(-50%) translateY(0);
            }

            40% {
                transform: translateX(-50%) translateY(-10px);
            }

            60% {
                transform: translateX(-50%) translateY(-5px);
            }
        }

        .event-counter {
            position: absolute;
            top: 20px;
            right: 20px;
            z-index: 1000;
            background: rgba(255, 255, 255, 0.95);
            padding: 10px 20px;
            border-radius: 25px;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
            font-weight: bold;
            color: #667eea;
            font-size: 0.9em;
        }

        .table-container {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            margin-top: 30px;
            max-height: 600px;
            overflow-y: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 15px;
            text-align: left;
            font-weight: 600;
            position: sticky;
            top: 0;
            z-index: 10;
        }

        td {
            padding: 12px 15px;
            border-bottom: 1px solid #eee;
        }

        tr {
            transition: all 0.2s ease;
        }

        tr:hover {
            background: #f0f0f0;
        }

        .row-highlight {
            background: #fef3c7 !important;
            border-left: 4px solid #f59e0b !important;
            font-weight: 600;
        }

        tbody tr {
            cursor: pointer;
        }

        .magnitude {
            font-weight: bold;
            padding: 5px 10px;
            border-radius: 5px;
            display: inline-block;
        }

        .mag-high {
            background: #fee2e2;
            color: #991b1b;
        }

        .mag-medium {
            background: #fed7aa;
            color: #9a3412;
        }

        .mag-low {
            background: #fef3c7;
            color: #92400e;
        }

        footer {
            text-align: center;
            color: white;
            padding: 20px;
            margin-top: 40px;
            opacity: 0.8;
        }

        .btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 25px;
            cursor: pointer;
            font-size: 1em;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 7px 20px rgba(102, 126, 234, 0.6);
        }

        .alert-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            z-index: 10000;
            justify-content: center;
            align-items: center;
        }

        .alert-content {
            background: white;
            padding: 40px;
            border-radius: 20px;
            max-width: 500px;
            text-align: center;
            animation: slideIn 0.3s ease;
        }

        @keyframes slideIn {
            from {
                transform: scale(0.8);
                opacity: 0;
            }

            to {
                transform: scale(1);
                opacity: 1;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <header>
            <h1>üö® CMH Earthquake Early Warning System</h1>
            <p class="subtitle">Real-Time Global Seismic Monitoring</p>
        </header>

        <div class="dashboard">
            <div class="card">
                <div class="card-title">System Status</div>
                <div class="card-value status-ok" id="status">Initializing...</div>
            </div>
            <div class="card">
                <div class="card-title">Monitoring Status</div>
                <div class="card-value status-ok">OK ‚Äì Real-Time</div>
            </div>
            <div class="card">
                <div class="card-title">Active Stations</div>
                <div class="card-value" id="stations">100</div>
            </div>
            <div class="card">
                <div class="card-title">Alerts Issued</div>
                <div class="card-value" id="alerts">0</div>
            </div>
        </div>

        <button class="btn" onclick="requestLocation()" style="margin-bottom: 20px;">üìç Request Location</button>

        <div style="position: relative;">
            <div id="map"></div>
            <div class="event-counter" id="eventCounter">Loading...</div>
            <div class="scroll-indicator" onclick="scrollToTable()">
                <div class="scroll-indicator-text">üìä View Data</div>
                <div class="scroll-arrow">‚¨á</div>
            </div>
        </div>

        <div class="table-container" id="tableContainer">
            <h2 style="margin-bottom: 20px; color: #667eea;">Recent Earthquake Events</h2>
            <table>
                <thead>
                    <tr>
                        <th>Time (UTC)</th>
                        <th>Magnitude</th>
                        <th>Location</th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                        <th>Depth (km)</th>
                        <th>Stations</th>
                    </tr>
                </thead>
                <tbody id="eventsTable">
                    <tr>
                        <td colspan="7" style="text-align: center; padding: 40px;">
                            Waiting for earthquake detection...
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <footer>
        <p>CMH Earthquake Early Warning System ‚Ä¢ Powered by IRIS Real-Time Network</p>
        <p>¬© 2025 ‚Ä¢ All Rights Reserved</p>
    </footer>

    <div class="alert-modal" id="alertModal">
        <div class="alert-content">
            <h2 style="color: #ef4444; margin-bottom: 20px;">üö® EARTHQUAKE ALERT</h2>
            <div id="alertDetails"></div>
            <button class="btn" onclick="closeAlert()" style="margin-top: 20px;">Dismiss</button>
        </div>
    </div>

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        const map = L.map('map').setView([20, 0], 2);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '¬© OpenStreetMap contributors'
        }).addTo(map);

        let markers = {};
        let userLocation = null;
        let earthquakeData = [];

        async function fetchEarthquakes() {
            try {
                const response = await fetch('/api/alert-history');
                const data = await response.json();
                earthquakeData = data;

                document.getElementById('eventCounter').textContent = `${data.length} events`;

                Object.values(markers).forEach(m => m.marker.remove());
                markers = {};

                data.forEach((event, index) => {
                    const lat = event.latitude;
                    const lon = event.longitude;
                    const mag = event.magnitude;

                    let color = '#fbbf24';
                    if (mag >= 6) color = '#ef4444';
                    else if (mag >= 5) color = '#f97316';

                    const marker = L.circleMarker([lat, lon], {
                        radius: Math.max(5, mag * 2),
                        fillColor: color,
                        color: '#fff',
                        weight: 2,
                        opacity: 1,
                        fillOpacity: 0.7
                    }).addTo(map);

                    const popupContent = `
                        <div style="text-align: center;">
                            <h3 style="color: #667eea; margin-bottom: 10px;">M${mag} Earthquake</h3>
                            <p><strong>Location:</strong> ${event.location || 'Unknown'}</p>
                            <p><strong>Time:</strong> ${new Date(event.detection_time).toUTCString()}</p>
                            <p><strong>Depth:</strong> ${event.depth_km} km</p>
                            <p><strong>Coordinates:</strong> ${lat.toFixed(2)}¬∞, ${lon.toFixed(2)}¬∞</p>
                            <hr style="margin: 10px 0;">
                            <p style="font-size: 0.9em; color: #666;"><strong>Warning Zones:</strong></p>
                            <p style="font-size: 0.85em;">üîµ 50 km: ~${Math.round(50 / 3.5 - 50 / 6)}s warning</p>
                            <p style="font-size: 0.85em;">üü¢ 200 km: ~${Math.round(200 / 3.5 - 200 / 6)}s warning</p>
                            <p style="font-size: 0.85em;">üü° 500 km: ~${Math.round(500 / 3.5 - 500 / 6)}s warning</p>
                        </div>
                    `;
                    marker.bindPopup(popupContent, { maxWidth: 300 });

                    marker.on('mouseover', function () {
                        highlightTableRow(index);
                        marker.setStyle({ weight: 4, fillOpacity: 1 });
                    });

                    marker.on('mouseout', function () {
                        unhighlightTableRows();
                        marker.setStyle({ weight: 2, fillOpacity: 0.7 });
                    });

                    marker.on('click', function () {
                        marker.openPopup();
                    });

                    markers[event.alert_id] = { marker: marker, index: index, lat: lat, lon: lon };
                });

                updateTable(data);

            } catch (error) {
                console.error('Error fetching earthquakes:', error);
            }
        }

        function updateTable(data) {
            const tbody = document.getElementById('eventsTable');
            if (data.length === 0) {
                tbody.innerHTML = '<tr><td colspan="7" style="text-align: center; padding: 40px;">No earthquakes detected</td></tr>';
                return;
            }

            tbody.innerHTML = data.map((event, index) => {
                const magClass = event.magnitude >= 6 ? 'mag-high' : event.magnitude >= 5 ? 'mag-medium' : 'mag-low';
                const time = new Date(event.detection_time).toUTCString();

                return `
                    <tr id="row-${index}" 
                        onmouseenter="highlightMarker('${event.alert_id}')" 
                        onmouseleave="unhighlightMarker('${event.alert_id}')"
                        onclick="jumpToMarker('${event.alert_id}')">
                        <td>${time}</td>
                        <td><span class="magnitude ${magClass}">M${event.magnitude}</span></td>
                        <td>${event.location || 'Unknown'}</td>
                        <td>${event.latitude.toFixed(4)}</td>
                        <td>${event.longitude.toFixed(4)}</td>
                        <td>${event.depth_km}</td>
                        <td>${event.num_stations}</td>
                    </tr>
                `;
            }).join('');
        }

        function highlightTableRow(index) {
            unhighlightTableRows();
            const row = document.getElementById(`row-${index}`);
            if (row) {
                row.classList.add('row-highlight');
                const tableContainer = document.getElementById('tableContainer');
                const rowRect = row.getBoundingClientRect();
                const containerRect = tableContainer.getBoundingClientRect();
                if (rowRect.top < containerRect.top || rowRect.bottom > containerRect.bottom) {
                    row.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }
            }
        }

        function unhighlightTableRows() {
            document.querySelectorAll('.row-highlight').forEach(row => {
                row.classList.remove('row-highlight');
            });
        }

        function highlightMarker(alertId) {
            const markerData = markers[alertId];
            if (markerData) {
                markerData.marker.setStyle({ weight: 4, fillOpacity: 1 });
            }
        }

        function unhighlightMarker(alertId) {
            const markerData = markers[alertId];
            if (markerData) {
                markerData.marker.setStyle({ weight: 2, fillOpacity: 0.7 });
            }
        }

        function jumpToMarker(alertId) {
            const markerData = markers[alertId];
            if (markerData) {
                map.flyTo([markerData.lat, markerData.lon], 6, { duration: 1 });
                markerData.marker.openPopup();
                document.getElementById('map').scrollIntoView({ behavior: 'smooth', block: 'center' });
            }
        }

        function scrollToTable() {
            document.getElementById('tableContainer').scrollIntoView({
                behavior: 'smooth',
                block: 'start'
            });
        }

        async function updateStatus() {
            try {
                const response = await fetch('/api/status');
                const data = await response.json();

                document.getElementById('status').textContent = data.status === 'running' ? '‚úì Running' : '‚úó Offline';
                document.getElementById('stations').textContent = data.active_stations;
                document.getElementById('alerts').textContent = data.alerts_issued;
            } catch (error) {
                console.error('Error updating status:', error);
            }
        }

        function requestLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(position => {
                    userLocation = {
                        lat: position.coords.latitude,
                        lon: position.coords.longitude
                    };

                    L.marker([userLocation.lat, userLocation.lon], {
                        icon: L.icon({
                            iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-blue.png',
                            shadowUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.7/images/marker-shadow.png',
                            iconSize: [25, 41],
                            iconAnchor: [12, 41],
                            popupAnchor: [1, -34],
                            shadowSize: [41, 41]
                        })
                    }).addTo(map).bindPopup('Your Location').openPopup();

                    map.setView([userLocation.lat, userLocation.lon], 6);
                });
            } else {
                alert('Geolocation is not supported by your browser');
            }
        }

        function closeAlert() {
            document.getElementById('alertModal').style.display = 'none';
        }

        updateStatus();
        fetchEarthquakes();

        setInterval(() => {
            updateStatus();
            fetchEarthquakes();
        }, 120000);
    </script>
</body>

</html>